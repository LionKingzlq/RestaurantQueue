<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.locale" value="zh_cn" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	
	<package name="user" extends="struts-default" namespace="/user">
		<action name="Register" class="Action.UserAction" method="Register">
		</action>
		<action name="Login" class="Action.UserAction" method="Login">
		</action>
		<action name="getUserName" class="Action.UserAction" method="getUserName">
		</action>
	</package>
	<package name="restaurant" extends="struts-default" namespace="/restaurant">
		<action name="getRestaurantsNearbyDistanceLeast" class="Action.RestaurantAction" method="getRestaurantsNearbyDistanceLeast">
		</action>
		<action name="getRestaurantsNearbyWaitingLeast" class="Action.RestaurantAction" method="getRestaurantsNearbyWaitingLeast">
		</action>
		<action name="getAllDishes" class="Action.RestaurantAction" method="getAllDishes">
		</action>
	</package>
	<package name="queue" extends="struts-default" namespace="/queue">
		<action name="addQueue" class="Action.QueueAction" method="addQueue">
		</action>
		<action name="getAllQueueRecords" class="Action.QueueAction" method="getAllQueueRecords">
		</action>
		<action name="getCurrentQueueRecords" class="Action.QueueAction" method="getCurrentQueueRecords">
		</action>
		<action name="getCurrentQueueRecordsWithRestid" class="Action.QueueAction" method="getCurrentQueueRecordsWithRestid">
		</action>
	</package>
	<package name="comment" extends="struts-default" namespace="/comment">
		<action name="createComments" class="Action.CommentsAction" method="createComments"></action>
		<action name="getAllCommentsRecords" class="Action.CommentsAction" method="getAllCommentsRecords"></action>
		<action name="getRestCommentsRecords" class="Action.CommentsAction" method="getRestCommentsRecords"></action>
	</package>
</struts>